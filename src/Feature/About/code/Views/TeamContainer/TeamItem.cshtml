@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<Agency.Feature.About.Models.TeamItem>
@using Glass.Mapper.Sc.Web.Mvc



@if (IsInEditingMode)
{
    if (Html.Glass().Model == null)
    {
        <p>Team Item - No datasource found, please associate a datasource.</p>
    }
    else
    {
        <div class="col-sm-4">
            <div class="team-member">
                @RenderImage(x => x.Image, isEditable: true, parameters: new { @Class = "mx-auto rounded-circle" })
                <h4>@Editable(x => x.Fname)</h4>
                <p class="text-muted">@Editable(x => x.Job)</p>
                
                <ul class="list-inline social-buttons">

                    <li class="list-inline-item">
                        @using (BeginRenderLink(x => x.Twitter, null, true))
                        {
                            <i class="fa fa-twitter"></i>
                        }
                    </li>
                    <li class="list-inline-item">
                        @using (BeginRenderLink(x => x.Facebook, null, true))
                        {
                            <i class="fa fa-facebook"></i>
                        }
                    </li>
                    <li class="list-inline-item">
                        @using (BeginRenderLink(x => x.Linkedin, null, true))
                        {
                            <i class="fa fa-linkedin"></i>
                        }
                    </li>
                </ul>
            </div>
        </div>
    }
}
else if (!IsInEditingMode && Html.Glass().Model != null)
{
    <div class="col-sm-4">
        <div class="team-member">
            @RenderImage(x => x.Image, isEditable: false, parameters: new { @Class = "mx-auto rounded-circle" })
            <h4>@Model.Name</h4>
            <p class="text-muted">@Model.Job</p>
            <ul class="list-inline social-buttons">
                <li class="list-inline-item">
                    @if (Model.Twitter != null)
                    {
                        <a href="@Model.Twitter.Url">
                            <i class="fa fa-twitter"></i>
                        </a>
                    }
                </li>
                <li class="list-inline-item">
                    @if (Model.Facebook != null)
                    {
                        <a href="@Model.Facebook.Url">
                            <i class="fa fa-facebook"></i>
                        </a>
                    }
                </li>
                <li class="list-inline-item">
                    @if (Model.Linkedin != null)
                    {
                        <a href="@Model.Linkedin.Url">
                            <i class="fa fa-linkedin"></i>
                        </a>
                    }
                </li>
            </ul>
        </div>
    </div>
}
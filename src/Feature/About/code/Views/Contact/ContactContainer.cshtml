@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<Agency.Feature.About.Models.ContactContainer>
@using Glass.Mapper.Sc.Web.Mvc

@if (IsInEditingMode)
{
    if (Html.Glass().Model == null)
    {
        <p>Page Header - No datasource found, please associate a datasource.</p>
    }
    else
    {
        <section id="contact">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h2 class="section-heading text-uppercase">Contact Us</h2>
                        <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
                    </div>
                </div>
                <div class="row">
                    @*@Html.Sitecore().Placeholder("contact-form")*@
                </div>
            </div>
        </section>
    }

}
else if (!IsInEditingMode && Html.Glass().Model != null)
{
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">Contact Us</h2>
                    <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
                </div>
            </div>
            <div class="row">
                @*@Html.Sitecore().Placeholder("contact-form")*@
            </div>
        </div>
    </section>
}

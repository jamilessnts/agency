@inherits Glass.Mapper.Sc.Web.Mvc.GlassView<Agency.Feature.Services.Models.PortifolioContainer>
@using Glass.Mapper.Sc.Web.Mvc


@if (IsInEditingMode)
{
    if (Html.Glass().Model == null)
    {
        <p>Page Header - No datasource found, please associate a datasource.</p>
    }
    else
    {
        <section id="services">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h2 class="section-heading text-uppercase">@Editable(x => x.Title)</h2>
                        <h3 class="section-subheading text-muted">@Editable(x => x.Subtitle)</h3>
                    </div>
                    @*<div class="row text-center">
                     @Html.Sitecore().Placeholder("teste")
                    </div>*@
                </div>
            </div>
        </section>
    }

}
else if (!IsInEditingMode && Html.Glass().Model != null)
{
    <section clss="bg-light" id="portfolio">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading text-uppercase">@Model.Title</h2>
                    <h3 class="section-subheading text-muted">@Model.Subtitle</h3>
                </div>
                @*<div class="row text-center">
                    @Html.Sitecore().Placeholder("teste")
                </div>*@
            </div>
        </div>
    </section>
}

